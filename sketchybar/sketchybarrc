##### Adding Left Items #####
# We add some regular items to the left side of the bar
# only the properties deviating from the current defaults need to be set

sketchybar --add item space_separator left	\
  --set space_separator icon='|'	\
  background.padding_left=15	\
  background.padding_right=15	\
  label.drawing=off	\
  \
  --add item front_app  left	\
  --set front_app       script="$PLUGIN_DIR/front_app.sh"	\
  icon.drawing=off	\
  --subscribe front_app front_app_switched

##### Adding Right Items #####
# In the same way as the left items we can add items to the right side.
# Additional position (e.g. center) are available, see:
# https://felixkratz.github.io/SketchyBar/config/items#adding-items-to-sketchybar

  sketchybar -m --add item clock right	\
    --set clock   update_freq=1	\
    icon.drawing=off  \
    background.border_color=$SURFACE \
    background.border_width=1 \
    script="$PLUGIN_DIR/clock.sh"	\
    \
    --add item task right	\
    --set task    update_freq=10	\
    updates=on  \
    label.width=60  \
    background.height=29  \
    label.align=center  \
    icon.drawing=off  \
    background.drawing=on \
    background.color=$SURFACE \
    label.color=$MAGENTA \
    script="$PLUGIN_DIR/task.sh"	\
    \
    --add item disk_space right                         \
    --set disk_space    script="$PLUGIN_DIR/disk_space.sh"    \
    update_freq=10 \
    \
    --add item wifi right                         \
    --set wifi    script="$PLUGIN_DIR/wifi.sh"    \
    update_freq=5 \
    --add item battery right	\
    --set battery script="$PLUGIN_DIR/battery.sh"	\
    update_freq=1	\
    --subscribe battery system_woke	\

    media=(
        script="$PLUGIN_DIR/media.sh"
        updates=on
        )

    sketchybar --add item media right \
      --set media "${media[@]}" \
        background.padding_right=$SEGMENT_SPACING	\
      --subscribe media media_change



##### Finalizing Setup #####
# The below command is only needed at the end of the initial configuration and
# should never be run in an item script.

    sketchybar --update

    echo "sketchybar configuration loaded.."
